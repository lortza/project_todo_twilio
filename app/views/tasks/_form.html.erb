<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, "Name*" %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :category_id, "Category*" %><br>
    <%= f.collection_select(:category_id, Category.all, :id, :name, {}, { class: 'form-control' }) %>
  </div>

  <div class="field">
    <%= f.label :point_value, "Point Value*" %><br>
    <%= f.number_field :point_value, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :completed_on %><br>
    <%= f.date_field :completed_on, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Submit" %>
  </div>

<% end %> <!-- form_for @task -->